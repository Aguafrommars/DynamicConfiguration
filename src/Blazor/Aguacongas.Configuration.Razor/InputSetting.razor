<div class="form-group row mb-3">
    <label for="@PropertyName" class="col-sm-2 col-form-label">@PropertyName</label>
    <div class="col-sm-10">
        @if (IsString)
        {
            <InputText class="form-control" @bind-Value="@ValueAsString" placeholder="@Placeholder" />
        }
        else if (IsEnum)
        {
            <InputEnum @bind-Value="@ValueAsEnum" PropertyType="@UnderlyingType" />
        }
        else if (IsNumber)
        {
            <InputNumber class="form-control" @bind-Value="@ValueAsDouble" />
        }
        else if (IsDate)
        {
            <InputDate class="form-control" @bind-Value="@ValueAsDate" />
        }
        else if (IsBool)
        {
            <div class="form-check form-switch">
                <InputCheckbox class="form-check-input" role="switch" @bind-Value="@ValueAsBool" />
            </div>
        }
        else if (IsEnumerable)
        {
            <InputEnumerable Model="Model" Value="@Value" Path="@Path" Property="@Property" />
        }
        else
        {
            @if (Value is null)
            {
                <button type="button" class="btn btn-sm btn-secondary" @onclick="CreateValue">+</button>
            }
            else
            {
                <div class="row">
                    <div class="hstack">
                        <div>
                            <a class="col-form-label" href="@($"{Path}")">...</a>
                        </div>
                        <div class="ms-auto">
                            <button type="button" class="btn btn-sm btn-secondary ms-3" @onclick="DeleteValue">-</button>
                        </div>
                    </div>
                </div>
            }
        }
        <div class="text-danger">@Error</div>
    </div>
</div>